<Window x:Class="QSC_Test_Automation.SelectServer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QSC_Test_Automation"
        mc:Ignorable="d"
        Title="Select Server" Height="120" Width="250" BorderThickness="2" BorderBrush="Black" WindowStyle="None"  WindowStartupLocation="CenterScreen" ResizeMode="NoResize"  Background="#FF9CAAC1" Topmost="True">
    <Grid>
        <TextBlock Text="Please choose server from options below:"  FontSize="15" TextWrapping="Wrap"  Style="{StaticResource   TextBlockStyle_QATprop}" Margin="10,10,10,10"/>
        <StackPanel Orientation="Vertical" Margin="10,50,10,10">
            <ComboBox Height="20" Width="160" Name="ServerCombo" SelectedIndex="0">
               
            </ComboBox>
            <Button Height="20" Width="50"  Content="OK" FontSize="10" Click="ServerOkClick" Margin="0,15,0,0" Style="{StaticResource Abortbutton}"/>
        </StackPanel>
    </Grid>
</Window>
